{
  "name": "ESP-IDF",
  "build": { "dockerfile": "Dockerfile" },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools-extension-pack",
        "espressif.esp-idf-extension",
        "Wokwi.wokwi-vscode",
        "SanjulaGanepola.github-local-actions",
        "bierner.markdown-mermaid"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "idf.espIdfPath": "/opt/esp/idf",
        "idf.toolsPath": "/opt/esp",
        "idf.gitPath": "/usr/bin/git",
        "idf.pythonBinPath": "/opt/esp/python_env/idf5.2_py3.12_env/bin/python3",
        "idf.customExtraPaths": "",
        "C_Cpp.default.compilerPath": "/opt/esp/tools/xtensa-esp-elf/esp-13.2.0_20230928/xtensa-esp-elf/bin/xtensa-esp32-elf-g++",
        "C_Cpp.default.cStandard": "c11",
        "C_Cpp.default.cppStandard": "c++20",
        "C_Cpp.default.includePath": [
          "${workspaceFolder}/**",
          "/opt/esp/idf/components/**"
        ],
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true
      }
    },
    "codespaces": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "idf.espIdfPath": "/opt/esp/idf",
        "idf.toolsPath": "/opt/esp",
        "idf.gitPath": "/usr/bin/git",
        "idf.pythonBinPath": "/opt/esp/python_env/idf5.2_py3.12_env/bin/python3",
        "idf.customExtraPaths": "",
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true
      },
      "extensions": [
        "ms-vscode.cpptools",
        "espressif.esp-idf-extension",
        "Wokwi.wokwi-vscode",
        "bierner.markdown-mermaid"
      ]
    }
  },
  "runArgs": [
    "--privileged",
    "-v", "/dev:/dev",
    "-v", "/var/run/docker.sock:/var/run/docker.sock"
  ],
  "containerEnv": {
    "LC_ALL": "C.UTF-8",
    "LANG": "C.UTF-8",
    "IDF_PATH": "/opt/esp/idf",
    "IDF_TOOLS_PATH": "/opt/esp",
    "TERM": "xterm-256color",
    "COLORTERM": "truecolor"
  },
  "remoteUser": "develop",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
}
