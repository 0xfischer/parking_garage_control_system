# Enable Code Coverage
# CONFIG_APPTRACE_GCOV_ENABLE=y (Depends on AppTrace)
CONFIG_APPTRACE_GCOV_ENABLE=n

# Dependencies
CONFIG_APPTRACE_ENABLE=n
# CONFIG_APPTRACE_DEST_UART=y
# CONFIG_APPTRACE_LOCK_ENABLE=n



# Optimization
# Optimization
CONFIG_COMPILER_OPTIMIZATION_NONE=n
CONFIG_COMPILER_OPTIMIZATION_DEFAULT=n
CONFIG_COMPILER_OPTIMIZATION_DEBUG=y
# CONFIG_COMPILER_OPTIMIZATION_SIZE is not set

# Disable Wi-Fi and Bluetooth to save IRAM
CONFIG_WR_DIS_WIFI=y
CONFIG_ESP32_WIFI_ENABLED=n
CONFIG_BT_ENABLED=n
CONFIG_ESP_WIFI_ENABLED=n



# Stack sizes for GCOV overhead
CONFIG_ESP_MAIN_TASK_STACK_SIZE=65536
CONFIG_FREERTOS_ISR_STACKSIZE=2048
CONFIG_ESP_IPC_TASK_STACK_SIZE=4096
CONFIG_ESP_SYSTEM_EVENT_TASK_STACK_SIZE=4096
